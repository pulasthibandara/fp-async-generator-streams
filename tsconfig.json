{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noPropertyAccessFromIndexSignature": true,
    "skipLibCheck": false,
    "outDir": "dist",
  },
  "include": ["src/**/*", "scripts/**/*", "test/**/*"]
}